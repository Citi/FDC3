{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://fdc3.finos.org/schemas/next/api/iframeHandshake.schema.json",
  "title": "iframe Handshake",
  "description": "Handshake message sent back by an iframe to the DA proxy code indicating that it is setup and ready to communicate over the MessagePort.",
  "type": "object",
  "allOf": [
    {
      "$ref": "#/$defs/IframeHandshakeBase"
    },
    {
      "$ref": "iFrameMessage.schema.json"
    }
  ],
  "$defs": {
    "IframeHandshakeBase": {
      "type": "object",
      "properties": {
        "type": {
          "title": "iframeHandshake Message Type",
          "const": "iframeHandshake"
        },
        "payload": {
          "title": "iframeHandshake Payload",
          "type": "object",
          "properties": {
            "resolverDetails": {
              "title": "FDC3 version",
              "type": "string",
              "description": "Implementation details, such as vendor and version details, for logging purposes."
            }
          },
          "additionalProperties": false,
          "required": ["resolverDetails"]
        }
      },
      "required": [
        "type",
        "payload"
      ],
      "additionalProperties": false
    }
  }
}